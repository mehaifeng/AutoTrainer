<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AutoTrainer.App"
             xmlns:local="using:AutoTrainer"
			 xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
			 xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 xmlns:dataGrid="clr-namespace:Material.Avalonia.DataGrid;assembly=Material.Avalonia.DataGrid"
             RequestedThemeVariant="Default">
	<Application.Styles>
		<Style Selector="TextBox">
			<Setter Property="FontFamily">
				Microsoft YaHei
			</Setter>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="FontFamily">
				Microsoft YaHei
			</Setter>
		</Style>
		<Style Selector="RadioButton">
			<Setter Property="FontFamily">
				Microsoft YaHei
			</Setter>
		</Style>
		<Style Selector="Button.Content">
			<Setter Property="FontFamily">
				Microsoft YaHei
			</Setter>
		</Style>
	</Application.Styles>
	<Application.Resources>
    </Application.Resources>
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
	    <avalonia:MaterialIconStyles/>
		<dataGrid:MaterialDataGridStyles/>
		<themes:MaterialTheme BaseTheme="Light" PrimaryColor="LightBlue" SecondaryColor="Indigo"/>
    </Application.Styles>
</Application>